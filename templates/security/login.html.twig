{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


    <h1 class="h3 mb-3 font-weight-normal mx-5">Please sign in</h1>
    <label for="inputEmail" class="mx-5">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mx-auto" style="width: 1000px;" autocomplete="email" required autofocus>
    <label for="inputPassword" class="mx-5">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control mx-auto" style="width: 1000px;" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary mx-5 my-2" type="submit">
        Sign in
    </button>
</form>
{% endblock %}
